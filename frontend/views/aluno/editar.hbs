{{!-- Página para editar aluno --}}
<div class="page-header">
    <h2>Editar Aluno</h2>
    <a href="/alunos" class="btn btn-secondary">← Voltar</a>
</div>

<div class="form-container">
    <form method="POST" action="/alunos/editar" class="form">
        <input type="hidden" name="aluno_id" value="{{aluno.aluno_id}}">
        
        <div class="form-group">
            <label for="nome">Nome *</label>
            <input 
                type="text" 
                id="nome" 
                name="nome" 
                required
                value="{{aluno.nome}}"
                placeholder="Digite o nome do aluno"
            >
        </div>
        
        <div class="form-group">
            <label for="matricula">Matrícula *</label>
            <input 
                type="text" 
                id="matricula" 
                name="matricula" 
                required
                value="{{aluno.matricula}}"
                placeholder="Digite a matrícula do aluno"
            >
        </div>
        
        <div class="form-group">
            <label for="datanascimento">Data de Nascimento *</label>
            <input 
                type="date" 
                id="datanascimento" 
                name="datanascimento" 
                required
                value="{{aluno.datanascimento}}"
            >
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a href="/alunos" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

