{{!-- Página para inserir novo aluno --}}
<div class="page-header">
    <h2>Inserir Novo Aluno</h2>
    <a href="/alunos" class="btn btn-secondary">← Voltar</a>
</div>

<div class="form-container">
    <form method="POST" action="/alunos/inserir" class="form">
        <div class="form-group">
            <label for="nome">Nome *</label>
            <input 
                type="text" 
                id="nome" 
                name="nome" 
                required
                value="{{#if aluno}}{{aluno.nome}}{{/if}}"
                placeholder="Digite o nome do aluno"
            >
        </div>
        
        <div class="form-group">
            <label for="matricula">Matrícula *</label>
            <input 
                type="text" 
                id="matricula" 
                name="matricula" 
                required
                value="{{#if aluno}}{{aluno.matricula}}{{/if}}"
                placeholder="Digite a matrícula do aluno"
            >
        </div>
        
        <div class="form-group">
            <label for="datanascimento">Data de Nascimento *</label>
            <input 
                type="date" 
                id="datanascimento" 
                name="datanascimento" 
                required
                value="{{#if aluno}}{{aluno.datanascimento}}{{/if}}"
            >
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/alunos" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

