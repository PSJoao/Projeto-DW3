<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{#if paginaAtiva}}
        {{!-- Layout com menu lateral (para páginas autenticadas) --}}
        <div class="container-layout">
            {{> sidebar}}
            <div class="main-content">
                {{> header}}
                <main class="content">
                    {{#if error}}
                        <div class="alert alert-error">
                            {{error}}
                        </div>
                    {{/if}}
                    {{{body}}}
                </main>
            </div>
        </div>
    {{else}}
        {{!-- Layout sem menu (para página de login) --}}
        <div class="container-login">
            {{{body}}}
        </div>
    {{/if}}
</body>
</html>

